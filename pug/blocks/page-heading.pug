-
  const pageNames = [
    {
      name: "index",
      title: "Седона - небольшой городок в Аризоне, заслуживающий большего!",
      text: "Рассмотрим 5 причин, по которым Седона круче чем Гранд Каньон!",
    },
    {
      name: "photo",
      title: "Фото и видео",
      text: "Не можете решиться на путешествие из-за курса? Фотографии помогут Вам забыть о политике и экономике.",
    },
    {
      name: "form",
      title: "Оставьте свой отзыв",
      text: "Помогите нашим отелям стать лучше! оставьте отзыв о них, а также о посещённых вами достопримечательностях"
    },
  ]

  const getTitle = pageName => pageNames.find(v => v.name === pageName).title;

  const getText = pageName => pageNames.find(v => v.name === pageName).text;

  const data = {
    mods: {
      bg: page !== "index" ? "page-heading__background--secondary" : "",
      img: page !== "index" ? "page-heading__image--secondary" : "",
      title: page !== "index" ? "page-heading__title--secondary" : "",
      text: page !== "index" ? "page-heading__text--secondary" : "",
    },
    img: {
      src: page !== "index" ? "img/text-sedona.svg" : "img/text-sedona-index.svg",
      alt: page !== "index" ? "Sedona" : "Welcomt to Sedona",
      width: page !== "index" ? "230" : null,
      height: page !== "index" ? "40" : null,
    },
    title: getTitle(page),
    text: getText(page),
  }

div.page-heading
  div(class="page-heading__background "+data.mods.bg)
    img(class="page-heading__image "+data.mods.img src= data.img.src alt= data.img.alt width= data.img.width height= data.img.height)
  h1(class="page-heading__title "+data.mods.title) #{data.title}
  p(class="page-heading__text "+data.mods.text) #{data.text}
