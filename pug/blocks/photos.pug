include ./photo.pug
section.photos
  - for (let i = 0; i <= photosData.length - 1; i++) {
      article(class="photo "+photosData[i].mod)
        div.photo__wrapper
          a(href= photosData[i].href)
            picture.photo__image
              source(media="(min-width: 1200px)" srcset= photosData[i].srcsetBig)
              source(media="(min-width: 768px)" srcset= photosData[i].srcsetMedium)
              source(media="(min-width: 320px)" srcset= photosData[i].srcsetMin)
              img(src= photosData[i].src srcset= photosData[i].srcsetSmall alt= photosData[i].alt)
        div.photo__description
          div.photo__text
            h2.photo__title #{photosData[i].title}
            p.photo__author #{photosData[i].authorName}
          button.photo__like(type="button")
            svg.photo__like-img(version="1.0" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="22px" height="20px" viewBox="0 0 22 20" enable-background="new 0 0 22 20" xml:space="preserve")
              g
                g(transform="translate(-295.000000, -464.000000)")
                  g(transform="translate(295.000000, 464.000000)")
                    path(fill="#b2b2b2" d="M12.383,3.646l-0.637,2.929L11.219,9H13.7h6.2v2c0,0.018,0,0.037,0.001,0.058L17,18H8V8.029 l0.014-0.015L12.383,3.646 M2,10v8V10 M13.2,0L6.6,6.6C6.2,6.9,6,7.4,6,8v10c0,1.1,0.9,2,2,2h9c0.8,0,1.5-0.5,1.8-1.2l3-7.1 C21.9,11.5,21.9,11.2,21.9,11V9H22c0-1.1-0.9-2-2-2h-6.3l1-4.6V2.1c0-0.4-0.2-0.8-0.4-1.1L13.2,0L13.2,0z M4,8H0v12h4V8L4,8z M22,9c0,0.033,0,0.044,0,0.044V9L22,9z")
            span.photo__like-count #{photosData[i].likeCount}
  - }
